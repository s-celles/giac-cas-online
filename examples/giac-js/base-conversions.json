    {
      "type": "raw",
      "content": "to_bin_str(n) := {\n  local L, s, k, pad;\n  L := convert(n, base, 2);\n  L := revlist(L);\n  pad := irem(4 - irem(size(L), 4), 4);\n  for (k := 1; k <= pad; k++) { L := prepend(L, 0); };\n  s := \"\";\n  for (k := 0; k < size(L); k++) {\n    if (k > 0 && irem(k, 4) == 0) s := s + \" \";\n    s := s + string(L[k]);\n  };\n  return s;\n}"
    },
    {
      "type": "raw",
      "content": "to_hex_str(n) := {\n  local L, s, k, d, pad, hex_digits;\n  hex_digits := \"0123456789ABCDEF\";\n  L := convert(n, base, 16);\n  L := revlist(L);\n  pad := irem(2 - irem(size(L), 2), 2);\n  for (k := 1; k <= pad; k++) { L := prepend(L, 0); };\n  s := \"\";\n  for (k := 0; k < size(L); k++) {\n    if (k > 0 && irem(k, 2) == 0) s := s + \" \";\n    d := L[k];\n    s := s + mid(hex_digits, d, 1);\n  };\n  return s;\n}"
    },
